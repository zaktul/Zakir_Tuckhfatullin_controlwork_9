@model ControlWork9.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Вход";
}

<h2>ViewData["Title"]</h2>

<a asp-action="Register" asp-controller="Account">Регистрация</a>
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">

    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="NumberOrEmail">Введите логин или email</label>
            <input type="text" asp-for="NumberOrEmail" />
            <span asp-validation-for="NumberOrEmail"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" />

            <span asp-validation-for="Password"></span>

        </div>
        
        <div>
            <label asp-for="RememberMe"></label><br/>
            <input asp-for="RememberMe"/>
        </div>
        <input type="hidden" asp-for="ReturnUrl"/>
        <div class="form-group">

            <input type="submit" value="Войти" class="btn" />

        </div>

    </div>

</form>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
